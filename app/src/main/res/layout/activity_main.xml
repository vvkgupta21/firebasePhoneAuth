<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/phNum"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Number"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:text="Get Otp"
            android:textSize="20sp"
            android:layout_marginHorizontal="80dp"
            app:layout_constraintStart_toStartOf="@id/phNum"
            app:layout_constraintEnd_toEndOf="@id/phNum"
            app:layout_constraintTop_toBottomOf="@id/phNum"/>

        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="OTP"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="40dp"
            android:inputType="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resend"/>

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/btn"
            app:layout_constraintStart_toStartOf="@id/btn"
            app:layout_constraintEnd_toEndOf="@id/btn"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:text="Submit"
            android:textSize="20sp"
            android:layout_marginHorizontal="80dp"
            app:layout_constraintStart_toStartOf="@id/otp"
            app:layout_constraintEnd_toEndOf="@id/otp"
            app:layout_constraintTop_toBottomOf="@id/otp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>